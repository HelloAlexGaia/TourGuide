<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tourguide.MainActivity">

    <RelativeLayout
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <ImageView
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:src="@drawable/travel"
            android:id="@+id/iv_travel"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_subtitle"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorSecondaryText"
            android:text="@string/in_china"/>
        <TextView
            android:layout_below="@id/tv_subtitle"
            android:layout_toRightOf="@id/iv_travel"
            android:layout_alignBottom="@id/iv_travel"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/beautiful_scenery"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/colorPrimaryText"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_scenery_point"
        android:padding="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
